{
  "_id": "{{@ system @}}",
  "oauth2": {
    "access_token": "$SECRET(oauth_access_token)",
    "client_id": "$SECRET(oauth_client_id)",
    "client_secret": "$SECRET(oauth_client_secret)",
    "refresh_token": "$SECRET(oauth_refresh_token)",
    "refresh_window": -10,
    "token_url": "{{@ token_url @}}"
  },
  "operations": {
    "delete": {
      "headers": {
        "Accept": "application/json"
      },
      "method": "DELETE",
      "url": "{{ properties.endpoint_type }}/{{ properties.datatype }}(guid'{{ entity['%s' | format(properties.id_name)] }}')"
    },
    "insert": {
      "headers": {
        "Accept": "application/json"
      },
      "method": "POST",
      "payload_property": "d",
      "url": "{{ properties.endpoint_type }}/{{ properties.datatype }}"
    },
    "list": {
      "headers": {
        "Accept": "application/json"
      },
      "method": "GET",
      "payload_property": "d.results",
      "url": "{{ properties.endpoint_type }}/{{ properties.datatype }}?$select=*"
    },
    "lookup": {
      "headers": {
        "Accept": "application/json"
      },
      "method": "GET",
      "payload_property": "d.results",
      "url": "{{ properties.endpoint_type }}/{{ properties.datatype }}?$filter={{ properties.id_name }} eq guid'{{ entity['%s' | format(properties.id_name)] }}'"
    },
    "update": {
      "headers": {
        "Accept": "application/json"
      },
      "method": "PUT",
      "url": "{{ properties.endpoint_type }}/{{ properties.datatype }}(guid'{{ entity['%s' | format(properties.id_name)] }}')"
    }
  },
  "type": "system:rest",
  "url_pattern": "https://start.exactonline.nl/api/v1/{{@ account_id @}}/%s",
  "verify_ssl": false
}
