[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "namespaced_identifiers": false,
    "source": {
      "id_expression": "{{ {{@ id_name @}} }}",
      "operation": "list",
      "properties": {
        "datatype": "{{@ endpoint @}}",
        "endpoint_type": "{{@ endpoint_type @}}"
      },
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "transform": {
      "rules": {
        "default": [
          ["copy", "*"],
          ["merge",
            ["apply", "format-date",
              ["dict", "OrderDate", "_T.OrderDate"]
            ]
          ],
          ["merge",
            ["apply", "format-date",
              ["dict", "Modified", "_T.Modified"]
            ]
          ],
          ["merge",
            ["apply", "format-date",
              ["dict", "InvoiceDate", "_T.InvoiceDate"]
            ]
          ],
          ["merge",
            ["apply", "format-date",
              ["dict", "DueDate", "_T.DueDate"]
            ]
          ],
          ["merge",
            ["apply", "format-date",
              ["dict", "Created", "_T.Created"]
            ]
          ],
          ["add", "$last_modified",
            ["datetime",
              ["integer",
                ["multiply",
                  ["integer",
                    ["replace", {
                      ")/": "",
                      "/Date(": ""
                    }, "_S.Modified"]
                  ], 1000000]
              ]
            ]
          ]
        ],
        "format-date": [
          ["add", "_temp_date",
            ["key-values", "_S."]
          ],
          ["merge",
            ["map",
              ["dict", "_.key",
                ["datetime",
                  ["integer",
                    ["multiply",
                      ["integer",
                        ["replace", {
                          ")/": "",
                          "/Date(": ""
                        }, "_.value"]
                      ], 1000000]
                  ]
                ]
              ], "_T._temp_date"]
          ],
          ["remove", "_temp_date"]
        ]
      },
      "type": "dtl"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-share",
    "add_namespaces": false,
    "batch_size": 1,
    "compaction": {
      "keep_versions": 100
    },
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-transform",
      "type": "dataset"
    },
    "transform": {
      "properties": {
        "id_expression": "{{ {{@ id_name @}} }}",
        "operation_delete_properties": {
          "datatype": "{{@ endpoint @}}",
          "endpoint_type": "{{@ endpoint_type @}}",
          "id_name": "{{@ id_name @}}"
        },
        "operation_insert_properties": {
          "datatype": "{{@ endpoint @}}",
          "endpoint_type": "{{@ endpoint_type @}}"
        },
        "operation_lookup_properties": {
          "datatype": "{{@ endpoint @}}",
          "endpoint_type": "{{@ endpoint_type @}}",
          "id_name": "{{@ id_name @}}"
        },
        "operation_update_properties": {
          "datatype": "{{@ endpoint @}}",
          "endpoint_type": "{{@ endpoint_type @}}",
          "id_name": "{{@ id_name @}}"
        },
        "primary_key": "{{@ id_name @}}",
        "rest_system": "{{@ system @}}",
        "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
      },
      "template": "transform-share-rest",
      "type": "template"
    },
    "type": "pipe"
  }
]
